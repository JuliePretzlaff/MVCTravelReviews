@model MVCTravelReviewApp.Models.Review

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">


    <div class="col-md-4 col-xs-12">
        <div class="thumbnail">

            <h2>
                @Html.DisplayFor(model => Model.BusinessName)
            </h2>

            <p class="bold">@Html.DisplayNameFor(model => model.Location):</p><p>  @Html.DisplayFor(modelItem => Model.Location)</p>
            <p class="bold">@Html.DisplayNameFor(model => model.Category.Type):</p><p> @Html.DisplayFor(modelItem => Model.Category.Type)</p>
            <p class="bold">@Html.DisplayNameFor(model => model.WouldRecommend):</p><p> @Html.DisplayFor(modelItem => Model.WouldRecommend)</p>
            <p class="bold">@Html.DisplayNameFor(model => model.StarRating):</p><p> @Html.DisplayFor(modelItem => Model.StarRating)</p>
            <p class="bold">@Html.DisplayNameFor(model => model.Comments):</p><p> @Html.DisplayFor(modelItem => Model.Comments)</p>

        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ReviewID }, new { @class = "nonnav-link" }) |
    <a class="nonnav-link" href="/Reviews">Back to All Reviews</a>
</p>
